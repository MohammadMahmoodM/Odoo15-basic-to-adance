<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree delete="0" create="0">
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="gender"/>
                <field name="booking_date"/>
                <field name="date_of_birth"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"
                           statusbar_visible="drafts,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>
                    <group>
                        <field name="patient_id"/>
                        <field name="appointment_time"/>
                        <field name="gender"/>
                        <field name="booking_date"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="gender"/>
                            </group>
                        </page>
                        <page string="Test" name="test">
                            <group>
                                <field name="html" placeholder="Enter your description"/>
                            </group>
                        </page>
                    </notebook>

                    <notebook>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="booking_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment_ids" model="ir.actions.act_window">
        <field name="name">appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This is help of action, of placeholder
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointment"
              action="action_hospital_appointment_ids"
              parent="menu_patient_submenu"
              sequence="0"
    />

</odoo>